{% apply inky_to_html %}
    <!DOCTYPE html>
    <html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>APERP | Confirmation d'Inscription</title>
    </head>

    <body class="bg-gray-900 text-gray-400">
    <div class="container">
        <h1 class="text-purple-degrade text-5xl">Confirmation d'inscription</h1>
    </div>

    <div class="border-b">
        <table class="table-auto">
            <thead>
            <tr>
                <th class="px-4 py-2">Représentant Légal</th>
                <th class="px-4 py-2">Événement</th>
                <th class="px-4 py-2">Nombre de places</th>
                <th class="px-4 py-2">Prix</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td class="border px-4 py-2">{{ nom }}</td>
                <td class="border px-4 py-2">{{ evenement }}</td>
                <td class="border px-4 py-2">{{ places_reservees }}</td>
                <td class="border px-4 py-2">{{ prix_total }}</td>
            </tr>
            </tbody>
        </table>
    </div>

    <!-- Banner Signature | Test -->
    <div>
        <img src="{{ email.image('@img/banner.png') }}" alt="Banner Signature">
    </div>

    </body>
    </html>
{% endapply %}
