{% apply inky_to_html %}
    <!DOCTYPE html>
    <html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>APERP | Confirmation d'Inscription</title>
    </head>

    <body class="bg-gray-900 text-gray-400">
    <div class="container">
        <h1 class="text-red-800 text-5xl">
            Suppression du compte de {{ contact.fullname }}
        </h1>
    </div>

    <p class="font-semibold">
        Bonjour {{ contact.fullname }} a fait la demande de suppression de son compte le
        {{ contact.createdAt|date('d/m/Y') }} à {{ contact.createdAt|date('H:i', 'europe/paris') }}.
    </p>

    <p class="pt-8">
        Une fois que le compte sera supprimé pensez à prévenir {{ contact.fullname }} que sa demande a été prise en compte.
    </p>

    {#<div>
        <img src="{{ email.image('@img/banner.png') }}" alt="Banner Signature">
    </div>#}

    </body>
    </html>
{% endapply %}
