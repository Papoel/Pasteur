{% block body %}
    {% include('components/_navbar.html.twig') %}
    <section>
        <div id="header">
            <h1 class="text-center py-8 md:py12 xl:py-24 text-4xl md:text-5xl">
                DÃ©couvrez nos<span class="mx-2 text-purple-degrade uppercase font-extrabold">Ã©vÃ©nements</span>Ã  venir.
            </h1>
            <p class="text-center text-lg font-normal text-gray-500 lg:text-xl">
                L'APE Ã  besoin d'aide, ne soyez pas timide, nous vous attendons ðŸ˜€.
            </p>
        </div>

        <div class="p-10 grid grid-cols-1 sm:grid-cols-1 md:grid-cols-3 lg:grid-cols-3 xl:grid-cols-3 gap-5">
            {% for event in events %}
                <div class="{{ event.helpNeeded is not empty ? 'border-degrade' }} rounded-lg transform duration-500 hover:-translate-y-2 hover:shadow-2xl overflow-hidden hover:shadow-indigo-100 relative">
                    <div class="{{ event.helpNeeded is not empty ? 'bg-indigo-600' : 'bg-gray-400' }} absolute left-[-34px] top-[32px] w-[170px] transform -rotate-45 text-center text-white font-semibold py-1 text-sm tracking-tight">
                        {{ event.startsAt|date("d / m / Y") }}
                    </div>

                    {% if event.imageName == "event.jpeg" %}
                        <img class="w-full" src="{{ asset('build/uploads/images/events/event.jpeg') }}" alt="{{ event.name }}">
                    {% else %}
                        <img style="max-height: 250px; max-width: 440px" class="object-fill" src="{{ vich_uploader_asset(event, 'imageFile') }}" alt="{{ event.name }}">
                    {% endif %}

                    <div class="flex justify-between m-2">
                        <div class="font-bold text-lg">{{ event.name }}</div>
                            <div class="flex justify-between">
                            <p class="inline-flex">
                                <svg class="w-6 h-6 text-pink-700" viewBox="0 0 24 24"><defs><path id="map-pin-fill_svg__24_small_map_pin_fill-a" d="M7 0a7 7 0 00-7 7c0 2.015 1.016 3.985 2 5.5.985 1.515 5 7.5 5 7.5s3.985-5.985 5-7.5c1.015-1.515 2-3.485 2-5.5a7 7 0 00-7-7m0 9.5c1.378 0 2.5-1.122 2.5-2.5S8.378 4.5 7 4.5A2.503 2.503 0 004.5 7c0 1.378 1.122 2.5 2.5 2.5"></path></defs><g fill="none" fill-rule="evenodd" transform="translate(5 2)"><mask id="map-pin-fill_svg__24_small_map_pin_fill-b" fill="#fff"><use xlink:href="#map-pin-fill_svg__24_small_map_pin_fill-a"></use></mask><use fill="#45494E" xlink:href="#map-pin-fill_svg__24_small_map_pin_fill-a"></use><g mask="url(#map-pin-fill_svg__24_small_map_pin_fill-b)"><path fill="#BE185D" d="M-5-2h24v24H-5z"></path></g></g></svg>
                                {{ event.location }}
                            </p>
                        </div>
                    </div>

                    {% set difference = date(event.finishAt).diff(date(event.startsAt)) %}
                    {% set leftDays = difference.days %}

                    {% if leftDays > 0 %}
                        <div class="flex justify-between mx-4 py-6">
                                <p class="inline-flex">
                                    <svg class="w-6 h-6 text-pink-700 mx-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" /></svg>
                                    <span>{{ event.startsAt|date('d/m') }} au {{ event.finishAt|date('d/m') }}</span>
                                </p>

                                <p class="inline-flex">
                                    <svg class="w-6 h-6 text-pink-700 mx-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                                    <span>{{ event.startsAt|date('H:i') }} Ã  {{ event.finishAt|date('H:i') }}</span>
                                </p>
                        </div>
                        {% else %}
                            <div class="flex justify-between mx-4 py-6">
                                <p class="inline-flex">
                                    <svg class="w-6 h-6 text-pink-700 mx-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" /></svg>
                                    <span class="">{{ event.startsAt|date('d/m') }}</span>
                                </p>
                                <p class="inline-flex">
                                    <svg class="w-6 h-6 text-pink-700 mx-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                                    <span class="">{{ event.startsAt|date('H:i') }} Ã  {{ event.finishAt|date('H:i') }}</span>
                                </p>
                            </div>
                    {% endif %}

                    <p class="text-gray-700 text-base p-6">
                        {{ event.description|u.truncate(75, '...', false) }}
                    </p>
                    <div class="flex justify-center mb-8">
                        <a href="{{ path('app_event_show', {'slug': event.slug}) }}" class="bg-indigo-500 text-white rounded-md px-2.5 py-2 inline-flex items-center hover:bg-indigo-200 hover:text-indigo-700 transition-all duration-500">
                            Lire Plus
                            <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 ml-2" viewBox="0 0 24 24">
                                <path d="M5 12h14M12 5l7 7-7 7"></path>
                            </svg>
                        </a>
                    </div>
                    <div class="flex justify-between px-6 pb-2">
                        <span class="{{ format_price(event) == 'Gratuit' ? 'bg-green-100 text-green-800 uppercase' :'bg-gray-200' }} inline-block rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">
                            {{ format_price(event)}}
                        </span>
                        <span class=" hover:scale-110">
                            {% include('components/_share.html.twig') %}
                        </span>
                    </div>
                </div>
            {% endfor %}
        </div>

    </section>
{% endblock %}
