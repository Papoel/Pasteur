{% block body %}
    {% include('components/_navbar.html.twig') %}
    <section class="h-screen">
        <div id="header" class="mt-40">
            <h1 class="text-center mb-4 text-4xl font-extrabold tracking-tight leading-none text-gray-900 md:text-3xl lg:text-6xl">
