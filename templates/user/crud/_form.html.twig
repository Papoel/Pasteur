<section class="text-gray-600">
    <h1 class="text-4xl text-center text-purple-degrade uppercase font-semibold pt-8 md:py-10">
        Modification des donn√©es de {{ user.fullName }}
    </h1>

    <div class="md:mt-10 sm:mt-0 py-8">
        <div class="mx-auto ">
            <div class="mt-5 md:mt-0 md:col-span-2">
                {{ form_start(form) }}
                    <div class="overflow-hidden sm:rounded-md">
                        <div class="px-4 py-3 bg-white">
                            <div class="grid grid-cols-6 gap-6">

                                <div id="firstname" class="md:col-span-2 col-span-6">
                                    {{ form_row(form.firstname, {
                                        row_class: 'mt-2 px-3',
                                        label_class: 'font-semibold text-gray-600',
                                        widget_class: 'border border-red-200 bg-gray-50',
                                        error_item_class: 'text-red-700 font-semibold',
                                        widget_errors_class: 'border-double border-4 border-red-500 bg-red-50',
                                    }) }}
                                </div>

                                <div id="lastname" class="md:col-span-2 col-span-6">
                                    {{ form_row(form.lastname, {
                                        row_class: 'mt-2 px-3',
                                        label_class: 'font-semibold text-gray-600',
                                        widget_class: 'border border-red-200 bg-gray-50',
                                        error_item_class: 'text-red-700 font-semibold',
                                        widget_errors_class: 'border-double border-4 border-red-500 bg-red-50',
                                    }) }}
                                </div>

                                <div id="email" class="md:col-span-2 col-span-6">
                                    {{ form_row(form.email, {
                                        row_class: 'mt-2 px-3',
                                        label_class: 'font-semibold text-gray-600',
                                        widget_class: 'border border-red-200 bg-gray-50',
                                        error_item_class: 'text-red-700 font-semibold',
                                        widget_errors_class: 'border-double border-4 border-red-500 bg-red-50',
                                    }) }}
                                </div>

                                <div id="pseudo" class="md:col-span-2 col-span-6">
                                    {{ form_row(form.pseudo, {
                                        row_class: 'mt-2 px-3',
                                        label_class: 'font-semibold text-gray-600',
                                        widget_class: 'border border-red-200 bg-gray-50',
                                        error_item_class: 'text-red-700 font-semibold',
                                        widget_errors_class: 'border-double border-4 border-red-500 bg-red-50',
                                    }) }}
                                </div>

                                <div id="telephone" class="md:col-span-2 col-span-6">
                                    {{ form_row(form.telephone, {
                                        row_class: 'mt-2 px-3',
                                        label_class: 'font-semibold text-gray-600',
                                        widget_class: 'border border-red-200 bg-gray-50',
                                        error_item_class: 'text-red-700 font-semibold',
                                        widget_errors_class: 'border-double border-4 border-red-500 bg-red-50',
                                    }) }}
                                </div>

                                <div id="address" class="md:col-span-2 col-span-6">
                                    {{ form_row(form.address, {
                                        row_class: 'mt-2 px-3',
                                        label_class: 'font-semibold text-gray-600',
                                        widget_class: 'border border-red-200 bg-gray-50',
                                        error_item_class: 'text-red-700 font-semibold',
                                        widget_errors_class: 'border-double border-4 border-red-500 bg-red-50',
                                    }) }}
                                </div>

                                <div id="complementAddress" class="md:col-span-2 col-span-6">
                                    {{ form_row(form.complementAddress, {
                                        row_class: 'mt-2 px-3',
                                        label_class: 'font-semibold text-gray-600',
                                        widget_class: 'border border-red-200 bg-gray-50',
                                        error_item_class: 'text-red-700 font-semibold',
                                        widget_errors_class: 'border-double border-4 border-red-500 bg-red-50',
                                    }) }}
                                </div>

                                <div id="postalCode" class="md:col-span-2 col-span-6">
                                    {{ form_row(form.postalCode, {
                                        row_class: 'mt-2 px-3',
                                        label_class: 'font-semibold text-gray-600',
                                        widget_class: 'border border-red-200 bg-gray-50',
                                        error_item_class: 'text-red-700 font-semibold',
                                        widget_errors_class: 'border-double border-4 border-red-500 bg-red-50',
                                    }) }}
                                </div>

                                <div id="town" class="md:col-span-2 col-span-6">
                                    {{ form_row(form.town, {
                                        row_class: 'mt-2 px-3',
                                        label_class: 'font-semibold text-gray-600',
                                        widget_class: 'border border-red-200 bg-gray-50',
                                        error_item_class: 'text-red-700 font-semibold',
                                        widget_errors_class: 'border-double border-4 border-red-500 bg-red-50',
                                    }) }}
                                </div>

                                <div id="birthday" class="md:col-span-2 col-span-6">
                                    {{ form_row(form.birthday, {
                                        row_class: 'mt-2 px-3',
                                        label_class: 'font-semibold text-gray-600',
                                        widget_class: 'border border-red-200 bg-gray-50',
                                        error_item_class: 'text-red-700 font-semibold',
                                        widget_errors_class: 'border-double border-4 border-red-500 bg-red-50',
                                    }) }}
                                </div>

                                {% if user.askDeleteAccountAt %}
                                   <div id="askDeleteAccountAt" class="md:col-span-2 col-span-6">
                                       <label for="askDeleteAccountAt"
                                              class="block text-gray-500 uppercase tracking-wider text-sm font-bold mt-2">
                                                Date de suppression du compte
                                       </label>
                                       <input type="text" name="askDeleteAccountAt" id="askDeleteAccountAt"
                                              class="w-full bg-gray-200 rounded border-b
                                              focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200
                                              text-base outline-none text-gray-700 py-1 px-3 leading-8
                                              transition-colors duration-200 ease-in-out"
                                              disabled
                                              value={{ user.askDeleteAccountAt|date('d/m/Y') }}

                                       >
                                       </input>
                                    </div>
                                {% endif %}

                            </div>
                        </div>
                        <div class="text-sm md:text-xl md:px-4 md:py-3 text-start mt-4">
                            {#<button class="bg-sky-700 px-2 py-1 rounded-full text-center text-white
                                hover:bg-sky-800 transition-all duration-300">
                                {{ button_label|default('Sauvegarder') }}
                            </button>#}

                            <button href="{{ path('app_user_index') }}"
                               class="text-indigo-600 text-sm text-center
                                       rounded-lg px-4 py-2.5 ml-3
                                       inline-flex items-center
                                       hover:text-white border border-indigo-600 hover:bg-indigo-600
                                       focus:ring-4 focus:outline-none focus:ring-indigo-300 font-medium
                                       dark:border-indigo-500 dark:text-indigo-500 dark:hover:text-white dark:hover:bg-indigo-600
                                       dark:focus:ring-indigo-900">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 mr-2">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M11.35 3.836c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 00.75-.75 2.25 2.25 0 00-.1-.664m-5.8 0A2.251 2.251 0 0113.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m8.9-4.414c.376.023.75.05 1.124.08 1.131.094 1.976 1.057 1.976 2.192V16.5A2.25 2.25 0 0118 18.75h-2.25m-7.5-10.5H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V18.75m-7.5-10.5h6.375c.621 0 1.125.504 1.125 1.125v9.375m-8.25-3l1.5 1.5 3-3.75" />
                                </svg>
                                    {{ button_label|default('Sauvegarder') }}
                            </button>


                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</section>




