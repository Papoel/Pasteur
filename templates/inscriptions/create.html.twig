{% extends 'base.html.twig' %}
{% block title %}Inscriptionmake{% endblock %}
{% block body %}

{% include('components/_navbar.html.twig') %}
    <section class="text-gray-600 body-font relative">
        <div class="container p-5 mx-auto flex sm:flex-nowrap flex-wrap h-screen">
            <div class="lg:w-2/3 md:w-1/2 bg-gray-300 rounded-lg overflow-hidden mr-10 p-10 flex items-end justify-start relative">
                <img alt="merci ❤️" class="absolute inset-0 w-full h-full object-cover object-center" src="{{ asset('build/images/thanks.jpg') }}">
            </div>
            <div class="lg:w-1/3 md:w-1/2 bg-white flex flex-col md:ml-auto w-full">
                <h2 class="text-purple-degrade uppercase text-center text-2xl font-semibold tracking-wider -m-8 mb-2">{{ event.name }}</h2>
                {# < Formulaire /> #}
                {{ form_start(form) }}
                    <div class="relative mb-4">
                        {{ form_errors(form.name) }}
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name) }}
                    </div>

                    <div class="relative mb-4">
                        {{ form_errors(form.email) }}
                        {{ form_label(form.email) }}
                        {{ form_widget(form.email) }}
                    </div>

                    <div class="relative mb-4">
                        {{ form_errors(form.phone) }}
                        {{ form_label(form.phone) }}
                        {{ form_widget(form.phone) }}
                    </div>

                    <div class="relative mb-4">
                        {{ form_errors(form.howHeard) }}
                        {{ form_label(form.howHeard) }}
                        {{ form_widget(form.howHeard) }}
                    </div>

                    <div class="relative mb-4">
                        {{ form_errors(form.message) }}
                        {{ form_label(form.message) }}
                        {{ form_widget(form.message) }}
                    </div>

                    <div class="relative mb-4">
                        {{ form_errors(form.activity) }}
                        {{ form_label(form.activity) }}
                        {{ form_widget(form.activity) }}
                    </div>

                    <div class="flex justify-between">
                        <button class="text-white bg-indigo-500 border-0 px-5 py-2.5 focus:outline-none hover:bg-indigo-600 rounded text-md">Envoyer</button>
                        <a href="{{ path('app_event_show', {'slug': event.slug}) }}"
                           class="text-red-700 hover:text-white border border-red-700 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg px-5 py-2.5 text-center text-md dark:border-red-500 dark:text-red-500 dark:hover:text-white dark:hover:bg-red-600 dark:focus:ring-red-900">
                            Annuler
                        </a>
                    </div>
                {{ form_end(form) }}


