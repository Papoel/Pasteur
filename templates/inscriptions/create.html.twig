{% extends 'base.html.twig' %}
{% block title %}Inscription #{{ event.id }}{% endblock %}
{% block body %}

{% include('components/_navbar.html.twig') %}
    <section class="text-gray-600">
        <h1 class="text-4xl text-center text-purple-degrade uppercase font-semibold pt-8 md:py-20">{{ event.name }}</h1>
        <div class="md:mt-10 sm:mt-0 py-8">
            <div class="mx-auto ">
                <div class="mt-5 md:mt-0 md:col-span-2">
                    {{ form_start(form) }}
                    <div class="overflow-hidden sm:rounded-md">
                        <div class="px-4 py-3 bg-white">
                            <div class="grid grid-cols-6 gap-6">
                                <div id="fullname" class="md:col-span-2 col-span-6">
                                    {{ form_label(form.name) }}
                                    {{ form_widget(form.name) }}
                                </div>

                                <div id="email" class="md:col-span-2 col-span-6">
                                    {{ form_label(form.email) }}
                                    {{ form_widget(form.email) }}
                                </div>

                                <div id="telephone" class="md:col-span-2 col-span-6">
                                    {{ form_label(form.phone) }}
                                    {{ form_widget(form.phone) }}
                                </div>

                                <div id="activite" class="md:col-span-3 col-span-6">
                                    {{ form_label(form.activity) }}
                                    {{ form_widget(form.activity) }}
                                </div>

                                {% if form.creneauChoices is not empty %}
                                    <div id="creneaux" class="md:col-span-3 col-span-6">
                                        {{ form_label(form.creneauChoices) }}
                                        {{ form_widget(form.creneauChoices) }}
                                    </div>
                                {% endif %}

                                <div id="message" class="md:col-span-6 col-span-6">
                                    {{ form_errors(form.message) }}
                                    {{ form_label(form.message) }}
                                    {{ form_widget(form.message) }}
                                </div>

                            </div>
                        </div>
                        <div class="text-sm md:text-xl md:px-4 md:py-3 text-center mt-4">
                            <button type="submit" class="registerBtn btn-purple-degrade w-full w-2/4 md:w-1/3">Valider mon inscription</button>
                        </div>
                    </div>
                    {{ form_widget(form._token) }}
                    {{ form_end(form, {'render_rest': false}) }}
                </div>
            </div>
        </div>
    </section>

{% endblock %}
