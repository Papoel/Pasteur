{% extends 'base.html.twig' %}
{% block title %}Inscription #{{ event.id }}{% endblock %}
{% block body %}
    {% include('components/_navbar.html.twig') %}
    <section class="text-gray-600">
        <h1 class="text-4xl text-center text-purple-degrade uppercase font-semibold">{{ event.name }}</h1>
        <div class="mt-10 sm:mt-0 py-8">
            <div class="mx-auto ">
                <div class="mt-5 md:mt-0 md:col-span-2">
                    {{ form_start(form) }}
                        <div class="overflow-hidden sm:rounded-md">
                            <div class="px-4 py-5 bg-white sm:p-6">
                                <div class="grid grid-cols-6 gap-6">
                                    <div class="col-span-2 sm:col-span-2">
                                        {{ form_label(form.registration.name) }}
                                        {{ form_widget(form.registration.name) }}
                                    </div>

                                    <div class="col-span-2 sm:col-span-2">
                                        {{ form_label(form.registration.email) }}
                                        {{ form_widget(form.registration.email) }}
                                    </div>

                                    <div class="col-span-2 sm:col-span-2">
                                        {{ form_label(form.registration.phone) }}
                                        {{ form_widget(form.registration.phone) }}
                                    </div>

                                    <div class="col-span-3 sm:col-span-3">
                                        {{ form_label(form.registration.howHeard) }}
                                        {{ form_widget(form.registration.howHeard) }}
                                    </div>

                                    <div class="col-span-3 sm:col-span-3">
                                        {{ form_label(form.registration.activity) }}
                                        {{ form_widget(form.registration.activity) }}
                                    </div>

                                    {#<div class="col-span-6 sm:col-span-3">
                                        {{ form_label(form.event.creneaux) }}
                                        {{ form_widget(form.event.creneaux) }}
                                    </div>#}


                                    <div class="col-span-3 sm:col-span-3">
                                        <label class="block text-gray-500 uppercase tracking-wider text-sm font-bold" for="custom_event_creneaux">Creneaux</label>
                                        <select class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" name="custom_event_creneaux" id="custom_event_creneaux" multiple>
                                            {% for creneau in creneaux %}
                                                <option id="{{ creneau.id }}" value="{{ creneau.id }}">{{ creneau }} </option>
                                            {% endfor %}
                                        </select>
                                    </div>

                                    <div class="col-span-3 sm:col-span-3">
                                        {{ form_errors(form.registration.message) }}
                                        {{ form_label(form.registration.message) }}
                                        {{ form_widget(form.registration.message) }}
                                    </div>

                                </div>
                            </div>
                            <div class="px-4 py-3 text-center text-xl sm:px-6 mt-4">
                                <button type="submit" class="btn-purple-degrade w-1/6">S'inscrire</button>
                            </div>
                        </div>
                    {{ form_widget(form._token) }}
                    {{ form_end(form, {'render_rest': false}) }}
                </div>
            </div>
        </div>
    </section>

{% endblock %}
