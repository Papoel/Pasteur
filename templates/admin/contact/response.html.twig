{% extends "@EasyAdmin/page/content.html.twig" %}
{%  set name = ea.entity.instance.fullname %}
{%  set email = ea.entity.instance.email %}
{%  set sujet = ea.entity.instance.subject %}

    {% block body_id 'easyadmin-reply-message' %}
        {% block body_class '' %}
            {% block content_title %}
                <h1 class="text-extrabold text-indigo-400">RÃ©ponde au message de : {{ name }}</h1>
            {% endblock %}

        {% block content_footer_wrapper '' %}
            {% block main %}
                <!--Section: Contact v.2-->
                <section class="mb-4">
                    <div class="row">

                        <div class="col-md-9 mb-md-0 mb-5">
                            <form id="contact-form" name="contact-form" action="#" method="POST">

                                <div class="row my-4">
                                    <div class="col-md-12">
                                        <div class="md-form mb-0">
                                            <label for="subject" class="">Sujet</label>
                                            <input type="text" id="subject" name="subject" class="form-control" value="{{ sujet }}" disabled>
                                        </div>
                                    </div>
                                </div>

                                <div class="row my-4">
                                    <div class="col-md-12">
                                        <div class="md-form">
                                            <label for="message">Votre message</label>
                                            <textarea type="text" id="message" name="message" rows="2" class="form-control md-textarea"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </form>

                            <div class="text-center text-md-left">
                                <a class="btn btn-primary" onclick="document.getElementById('contact-form').submit();">
                                    Envoyer le message
                                </a>
                            </div>
                        </div>
                    </div>

                </section>
            {% endblock %}
