{% extends 'base.html.twig' %}

{% block title 'ADMIN - Détails Inscriptions' %}

{% block body %}

    {% include('components/_navbar.html.twig') %}

    <section>
            <h1 class="text-center py-8 md:py12 xl:py-24 text-4xl md:text-5xl">
                <span class="mx-2 text-purple-degrade uppercase font-extrabold">{{ event.name }}</span>
            </h1>

        <div>
            <div class="min-h-screen flex flex-col flex-auto flex-shrink-0 antialiased bg-white">
                <!-- Récapitulatif de l'événement -->
                <div class="flex flex-col justify-center mt-5 mb-4 md:mt-0 mx-16">
                    <h2 class="mb-2 text-lg font-semibold leading-none text-left text-indigo-600 uppercase">
                        Récapitulatif
                    </h2>
                    <p class="mt-5 text-md lh-lg text-gray-700 text md:text-left">
                        Cet événement est prévue pour le
                        {{ event.startsAt|format_datetime('full', 'short', locale='fr') }}.<br>
                    </p>
                    <p class="mt-5 text-md lh-lg text-gray-700 text md:text-left">
                        Nous avons actuellement un total de
                        <span class="font-extrabold text-red-600">
                            {{ event.registered }} {{ pluralize(event.registered, 'participant', 'participants') }}.
                        </span>
                    </p>
                </div>

                <!-- Carte Attentes $$$ -->
                <div class="flex items-start justify-center pt-5 mx-10 bg-white min-w-screen">
                    <div class="flex flex-wrap w-full px-4">
                        <!-- Somme attendue grâce aux inscriptions -->
                        <div class="w-full px-2 sm:w-1/2 xl:w-1/3">
                            <div class="relative flex items-center px-5 py-6 overflow-hidden rounded-md shadow-sm bg-gradient-to-br from-gray-100 to-gray-200">
                                <span class="absolute top-0 left-0 w-2 h-full bg-gradient-to-b from-indigo-300 to-indigo-500"></span>
                                <div class="mx-5">
                                    <div class="text-gray-500">Attendue</div>
                                    <h4 class="text-2xl font-semibold text-gray-700">
                                        {{ ((event.capacity + event.registered) * (event.price)) / 100 }} €
                                    </h4>
                                </div>
                            </div>
                        </div>
                        <!-- Montant actuellement en caisse grâce aux inscriptions -->
                        <div class="w-full px-2 sm:w-1/2 xl:w-1/3 xl:mt-0">
                            <div class="relative flex items-center px-5 py-6 overflow-hidden rounded-md shadow-sm bg-gradient-to-br from-gray-100 to-gray-200">
                                <span class="absolute top-0 left-0 w-2 h-full bg-gradient-to-b from-pink-300 to-pink-500"></span>

                                <div class="mx-5">
                                    <div class="text-gray-500">Actuellement</div>
                                    <h4 class="text-2xl font-semibold text-gray-700">
                                        {{ ((event.registered) *  (event.price)) / 100 }} €
                                    </h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Séparateur -->
                <div class="my-8 text-center border-b">
                    <div class="inline-block px-2 text-sm font-medium leading-none tracking-wide text-gray-600 transform translate-y-1/2 bg-white">
                        {{ pluralize(event.registered, 'Représentant', 'Représentants') }}
                        {{ pluralize(event.registered, 'légal', 'légaux') }}
                    </div>
                </div>

                <div class="h-full ml-12 mb-10">
                    <!-- Statistics Cards -->
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 p-4 gap-4">
                        {% for registration in registrations %}
                            <div class="bg-indigo-500 dark:bg-gray-800 shadow-lg rounded-md flex items-center justify-between p-3 border-b-4 border-indigo-600 dark:border-gray-600 text-white font-medium group">
                                <div class="flex justify-center items-center w-14 h-14 bg-white rounded-full transition-all duration-300 transform group-hover:rotate-12">
                                    <svg width="30" height="30" fill="none" viewBox="0 0 24 24" stroke="currentColor"
                                         class="stroke-current text-indigo-800 dark:text-gray-800 transform transition-transform duration-500 ease-in-out">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                                    </svg>
                                </div>
                                <div class="text-right">
                                    <p class="text-2xl">{{ registration.fullname }}</p>
                                    <p>{{ registration.telephone }}</p>
                                    <p>{{ registration.email }}</p>
                                </div>
                            </div>
                        {% endfor %}

                    </div>

                    <!-- Séparateur -->
                    <div class="my-8 text-center border-b">
                        <div class="inline-block px-2 text-sm font-medium leading-none tracking-wide text-gray-600 transform translate-y-1/2 bg-white">
                            Liste des inscrits à {{ event.name }}
                        </div>
                    </div>

                    <!-- Client Table -->
                    <!-- TODO: Imprimer la liste ou sauvegarder au format pdf -->

                    <div class="mx-4">
                        <div class="w-full overflow-hidden rounded-lg shadow-xs">
                            <div class="w-full overflow-x-auto">
                                <table class="w-full">
                                    <thead>
                                    <tr class="text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b dark:border-gray-700 bg-gray-50 dark:text-gray-400 dark:bg-gray-800">
                                        <th class="px-4 py-3">Client</th>
                                        <th class="px-4 py-3">Prix</th>
                                        <th class="px-4 py-3">Status</th>
                                        <th class="px-4 py-3">Nom des inscrits</th>
                                    </tr>
                                    </thead>
                                    <tbody class="bg-white divide-y dark:divide-gray-700 dark:bg-gray-800">
                                    {% for registration in registrations %}
                                        <tr class="bg-gray-50 dark:bg-gray-800 hover:bg-gray-100 dark:hover:bg-gray-900 text-gray-700 dark:text-gray-400">
                                            <td class="px-4 py-3">
                                                <div class="flex items-center text-sm">
                                                    <div class="relative hidden w-8 h-8 mr-3 rounded-full md:block">
                                                        <img class="object-cover w-full h-full rounded-full"
                                                             src="{{ asset('build/uploads/images/Avatar-Batman.svg') }}"
                                                             alt="" loading="lazy"/>
                                                        <div class="absolute inset-0 rounded-full shadow-inner"
                                                             aria-hidden="true"></div>
                                                    </div>
                                                    <div>
                                                        <p class="font-semibold">{{ registration.fullname }}</p>
                                                        <p class="text-xs text-gray-600 dark:text-gray-400">
                                                            {{ registration.children|length }}
                                                            {{ pluralize(registration.children|length, 'enfant', 'enfants') }}
                                                            {{ pluralize(registration.children|length, 'inscrit', 'inscrits') }}
                                                        </p>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="px-4 py-3 text-sm">
                                                {{ (registration.event.price / 100) * (registration.children|length) }}
                                                €
                                            </td>
                                            <td class="px-4 py-3 text-xs">
                                                {% if registration.isPaid == 1 or event.price == 0 %}
                                                    <span class="px-2 py-1 font-semibold leading-tight text-green-700
                                                    bg-green-100 rounded-full dark:bg-green-700 dark:text-green-100">
                                                        {% if event.price == 0 %}
                                                            Gratuit
                                                        {% else %}
                                                            Payé
                                                        {% endif %}
                                                    </span>
                                                {% else %}
                                                    <span class="px-2 py-1 font-semibold leading-tight text-red-700
                                                    bg-red-100 rounded-full dark:bg-red-700 dark:text-red-100">
                                                        Non Payé
                                                    </span>
                                                {% endif %}
                                            </td>
                                            <td class="px-4 py-3 text-sm">
                                                {% for child in registration.children %}
                                                    <p>{{ child.firstname }} {{ child.lastname }}</p>
                                                {% endfor %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- ./Client Table -->
                </div>

                <!-- ./Button return previous page -->
                <div class="flex justify-center mt-8">
                    <a href="{{ path('app_admin_details_events') }}"
                       class="flex items-center justify-center w-32 px-4 py-2 text-sm font-medium leading-5 text-white transition-colors duration-150 bg-indigo-600 border border-transparent rounded-lg active:bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:shadow-outline-indigo">
                        Retour
                    </a>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
