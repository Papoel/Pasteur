{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
{% include('components/_navbar.html.twig') %}

<section class="text-gray-600">
    <h1 class="text-4xl text-center text-purple-degrade uppercase font-semibold pt-8 md:py-10">Formulaire de Contact</h1>

    <div class="md:mt-10 sm:mt-0 py-8">
        <div class="mx-auto ">
            <div class="mt-5 md:mt-0 md:col-span-2">
                {{ form_start(form) }}
                <div class="overflow-hidden sm:rounded-md">
                    <div class="px-4 py-3 bg-white">
                        <div class="grid grid-cols-6 gap-6">
                            <div id="fullname" class="md:col-span-3 col-span-6 py-2">
                                {{ form_row(form.fullname, {
                                    row_class: 'mt-2 px-3',
                                    label_class: 'font-semibold text-gray-600',
                                    widget_class: 'border border-red-200 bg-gray-50',
                                    error_item_class: 'text-red-700 font-semibold',
                                    widget_errors_class: 'border-double border-4 border-red-500 bg-red-50',
                                }) }}
                            </div>

                            <div id="email" class="md:col-span-3 col-span-6 py-2">
                                {{ form_row(form.email, {
                                    row_class: 'mt-2 px-3',
                                    label_class: 'font-semibold text-gray-600',
                                    widget_class: 'border border-red-200 bg-gray-50',
                                    error_item_class: 'text-red-700 font-semibold',
                                    widget_errors_class: 'border-double border-4 border-red-500 bg-red-50',
                                }) }}
                            </div>

                            <div id="subject" class="md:col-span-3 col-span-6 py-2">
                                {{ form_row(form.subject, {
                                    row_class: 'mt-2 px-3',
                                    label_class: 'font-semibold text-gray-600',
                                    widget_class: 'border border-red-200 bg-gray-50',
                                    error_item_class: 'text-red-700 font-semibold',
                                    widget_errors_class: 'border-double border-4 border-red-500 bg-red-50',
                                }) }}
                            </div>

                            <div id="message" class="col-span-6 py-2">
                                {{ form_row(form.message, {
                                    row_class: 'mt-2 px-3',
                                    label_class: 'font-semibold text-gray-600',
                                    widget_class: 'border border-red-200 bg-gray-50',
                                    error_item_class: 'text-red-700 font-semibold',
                                    widget_errors_class: 'border-double border-4 border-red-500 bg-red-50',
                                }) }}
                            </div>

                            <div id="submit" class="col-span-6 py-2">
                                {{ form_row(form.submit, {
                                    row_class: 'mt-2 px-3',
                                    label_class: 'font-semibold text-gray-600',
                                    widget_class: 'border border-red-200 bg-gray-50',
                                }) }}
                            </div>

                        </div>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</section>


{% endblock %}
